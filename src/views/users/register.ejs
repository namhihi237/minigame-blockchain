<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<%- include('../index.ejs') %>
		<title>Create user</title>
	</head>
	<body>
		<form action="/users/register" method="POST">
			<div class="form-group">
				<label for="formGroupExampleInput">Name</label>
				<input type="text" class="form-control" id="name" placeholder="Tony" name="name" />
			</div>
			<div class="form-group">
				<label for="formGroupExampleInput2">Email</label>
				<input type="text" class="form-control" id="email" placeholder="example@example.com" name="email" />
			</div>
			<div class="form-group">
				<label for="formGroupExampleInput3">Phone</label>
				<input type="text" class="form-control" id="phone" placeholder="0123456789" name="phone" />
			</div>
			<button type="submit" class="btn btn-primary">Register</button>
		</form>
		<% if (message) { %> <%- include('../components/toast.ejs',{message}) %> <% } %>
	</body>
	<script></script>
</html>
